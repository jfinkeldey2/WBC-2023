<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_back" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ef_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ef_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/star"
                android:padding="@dimen/default_margin" />

            <TextView
                android:id="@+id/ef_time"
                style="@style/medium_text"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawablePadding="@dimen/continuous_padding"
                android:text="@string/event_time_and_location" />

            <TextView
                android:id="@+id/ef_location"
                style="@style/medium_text"
                android:layout_width="wrap_content"
                android:layout_below="@+id/ef_time"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/default_margin" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/text_margin_small" >

            <TextView
                android:id="@+id/ef_format"
                style="@style/medium_text"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/event_format" />

            <TextView
                android:id="@+id/ef_class"
                style="@style/medium_text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/event_class" />
        </RelativeLayout>

        <EditText
            android:id="@+id/ef_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/text_margin_small"
            android:background="@drawable/edit_text_back"
            android:gravity="left"
            android:hint="@string/event_note_hint"
            android:minLines="4"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ef_clear"
                style="@style/button"
                android:layout_weight="1"
                android:text="@string/clear" />

            <Button
                android:id="@+id/ef_share"
                style="@style/button"
                android:layout_weight="1"
                android:text="@string/share" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>