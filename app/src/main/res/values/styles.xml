<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="list_item" parent="AppTheme">
		<item name="android:textSize">14sp</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="medium_text" parent="AppTheme">
		<item name="android:gravity">left</item>
		<item name="android:textSize">@dimen/default_text_size</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="text_with_link" parent="medium_text">
		<item name="android:textColor">#0000FF</item>
		<item name="android:padding">@dimen/default_margin</item>
	</style>

	<style name="large_text" parent="AppTheme">
		<item name="android:textStyle">bold|italic</item>
		<item name="android:padding">8dp</item>
		<item name="android:textSize">24sp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="button" parent="medium_text">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/default_button_selector</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_marginLeft">@dimen/default_margin</item>
		<item name="android:layout_marginRight">@dimen/default_margin</item>
		<item name="android:layout_marginBottom">@dimen/default_margin</item>
		<item name="android:layout_marginTop">20dp</item>
	</style>

	<style name="dialog_header">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/primary</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">left</item>
		<item name="android:layout_marginTop">@dimen/layout_margin_large</item>
	</style>

	<style name="div_v">
		<item name="android:background">@color/divider</item>
		<item name="android:layout_width">1dip</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="div_h">
		<item name="android:background">@color/divider</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dip</item>
	</style>

	<style name="orientation_changer">
		<item name="android:orientation">vertical</item>
	</style>

</resources>