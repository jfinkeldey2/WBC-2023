<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="list_item">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="medium_text">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="button" parent="medium_text">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/default_button_selector</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_marginLeft">@dimen/default_margin</item>
		<item name="android:layout_marginRight">@dimen/default_margin</item>
		<item name="android:layout_marginBottom">@dimen/default_margin</item>
		<item name="android:layout_marginTop">20dp</item>
	</style>

	<style name="search_button" parent="button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:background">@drawable/search_button_selector</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginTop">@dimen/default_margin</item>
	</style>

	<style name="help_header" parent="medium_text">
		<item name="android:gravity">center</item>
		<item name="android:padding">@dimen/default_margin</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/group_collapsed</item>
	</style>

	<style name="help_text" parent="medium_text">
		<item name="android:gravity">left</item>
		<item name="android:lineSpacingExtra">4dp</item>
		<item name="android:layout_marginLeft">@dimen/default_margin</item>
		<item name="android:layout_marginRight">@dimen/default_margin</item>
		<item name="android:layout_marginBottom">@dimen/text_margin_large</item>
		<item name="android:visibility">gone</item>
	</style>

	<style name="header">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/red</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_marginTop">@dimen/text_margin_large</item>
	</style>

	<style name="div_v">
		<item name="android:background">@color/divider</item>
		<item name="android:layout_width">1dip</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="div_h">
		<item name="android:background">@color/divider</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dip</item>
	</style>

	<style name="orientation_changer">
		<item name="android:orientation">vertical</item>
	</style>

</resources>