<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- disabled -->
  <item android:state_enabled="false">
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <solid android:color="@color/default_button_disabled" />

          <padding android:bottom="@dimen/default_margin" android:left="@dimen/default_margin" android:right="@dimen/default_margin" android:top="@dimen/default_margin" />

          <corners android:radius="2dp" />
        </shape>
      </item>
      <item android:drawable="@drawable/enter_icon" />
    </layer-list>
  </item>

  <!-- pressed -->
  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <solid android:color="@color/default_button_pressed" />

          <padding android:bottom="@dimen/default_margin" android:left="@dimen/default_margin" android:right="@dimen/default_margin" android:top="@dimen/default_margin" />

          <corners android:radius="2dp" />
        </shape>
      </item>
      <item android:drawable="@drawable/enter_icon" />
    </layer-list>
  </item>

  <!-- default -->
  <item>
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <solid android:color="@color/default_button_enabled" />

          <padding android:bottom="@dimen/default_margin" android:left="@dimen/default_margin" android:right="@dimen/default_margin" android:top="@dimen/default_margin" />

          <corners android:radius="2dp" />
        </shape>
      </item>
      <item android:drawable="@drawable/enter_icon" />
    </layer-list>
  </item>

</selector>