<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/group_pressed" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="@color/group_focused" />
        </shape></item>
    <item><layer-list>
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/group_default_collapsed" />
                </shape></item>
            <item android:bottom="-1px" android:left="-1px" android:right="-1px" android:top="0px"><shape android:shape="rectangle">
                    <stroke android:width="1px" android:color="#000000" />
                </shape></item>
        </layer-list></item>

</selector>