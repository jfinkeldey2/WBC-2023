<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="org.boardgamers.wbc"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="12"
	android:versionName="1.031">

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name_long"
		android:theme="@style/AppTheme">
		<receiver android:name=".ServiceStarter">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED"/>
			</intent-filter>
		</receiver>
		<service
			android:name=".NotificationService"
			android:enabled="true">
		</service>
		<activity
			android:name=".SplashScreen"
			android:label="@string/app_name_short">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".MainActivity"
			android:label="@string/app_name_short">
		</activity>
		<activity
			android:name=".TournamentActivity"
			android:label="@string/activity_tournament">
		</activity>
		<activity
			android:name=".EventActivity"
			android:label="@string/activity_event"
			android:windowSoftInputMode="stateUnchanged">
		</activity>
		<activity
			android:name=".MapActivity"
			android:label="@string/map">
		</activity>
		<activity
			android:name=".SearchActivity"
			android:label="@string/activity_search"
			android:windowSoftInputMode="stateUnchanged">
		</activity>
		<activity
			android:name=".FilterActivity"
			android:label="@string/activity_filter">
		</activity>
		<activity
			android:name=".HelpActivity"
			android:label="@string/activity_help">
		</activity>
		<activity
			android:name=".AboutActivity"
			android:label="@string/activity_about">
		</activity>
		<activity
			android:name=".SettingsActivity"
			android:label="@string/activity_settings"
			android:windowSoftInputMode="stateUnchanged">
		</activity>
	</application>

</manifest>
