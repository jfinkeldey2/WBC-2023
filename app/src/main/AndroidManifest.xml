<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.boardgamers.wbc"
    android:versionCode="12"
    android:versionName="1.031" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_long"
        android:theme="@style/AppTheme" >
        <receiver android:name=".ServiceStarter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <service
            android:name=".NotificationService"
            android:enabled="true" >
        </service>
		    <activity
			    android:name=".MainActivity"
			    android:label="@string/my_summary" >
			    <intent-filter>
				    <action android:name="android.intent.action.MAIN" />
				    <category android:name="android.intent.category.LAUNCHER" />
			    </intent-filter>
		    </activity>

        <activity
            android:name=".ScheduleActivity"
            android:label="@string/activity_schedule" >
        </activity>
        <activity
            android:name=".TournamentActivity"
            android:label="@string/activity_tournament" >
        </activity>
        <activity
            android:name=".EventActivity"
            android:label="@string/activity_event"
            android:windowSoftInputMode="stateUnchanged" >
        </activity>
    </application>

</manifest>